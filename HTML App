<body>
    <div class="container">
        <div class="header">
            <button class="config-btn" onclick="openConfig()">‚öôÔ∏è Configurar</button>
            <h1>Planning Diario</h1>
            <div class="current-day" id="currentDay"></div>
        </div>

        <div class="day-selector">
            <button class="day-btn" data-day="1">Lun</button>
            <button class="day-btn" data-day="2">Mar</button>
            <button class="day-btn" data-day="3">Mi√©</button>
            <button class="day-btn" data-day="4">Jue</button>
            <button class="day-btn" data-day="5">Vie</button>
            <button class="day-btn" data-day="6">S√°b</button>
            <button class="day-btn" data-day="0">Dom</button>
        </div>

        <div id="content"></div>
    </div>

    <!-- Modal de configuraci√≥n -->
    <div class="modal" id="configModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>‚öôÔ∏è Configuraci√≥n</h2>
                <button class="close-btn" onclick="closeConfig()">‚úï</button>
            </div>

            <div class="config-section">
                <h3>üìã Datos del Planning</h3>
                <p class="info-text">Pega aqu√≠ el objeto JavaScript con tu planning personalizado</p>
                <textarea id="configData"></textarea>
            </div>

            <button class="save-btn" onclick="saveConfig()">üíæ Guardar Configuraci√≥n</button>
            
            <p class="info-text" style="margin-top: 15px;">
                Los datos se guardan localmente en tu navegador y persisten entre sesiones.
            </p>
        </div>
    </div>

    <script>
        // Datos por defecto (ejemplo gen√©rico)
        const defaultData = {
            1: {
                name: "Lunes",
                activities: [
                    { time: "Ma√±ana", content: "Ejemplo de actividad matutina" },
                    { time: "Tarde", content: "Ejemplo de actividad vespertina" }
                ],
                workout: null,
                diet: {
                    breakfast: "Configura tu desayuno",
                    lunch: "Configura tu comida",
                    dinner: "Configura tu cena",
                    note: "A√±ade notas sobre tu dieta"
                }
            },
            2: { name: "Martes", activities: [{ time: "Todo el d√≠a", content: "Configura tus actividades" }], workout: null, diet: { breakfast: "...", lunch: "...", dinner: "...", note: "..." }},
            3: { name: "Mi√©rcoles", activities: [{ time: "Todo el d√≠a", content: "Configura tus actividades" }], workout: null, diet: { breakfast: "...", lunch: "...", dinner: "...", note: "..." }},
            4: { name: "Jueves", activities: [{ time: "Todo el d√≠a", content: "Configura tus actividades" }], workout: null, diet: { breakfast: "...", lunch: "...", dinner: "...", note: "..." }},
            5: { name: "Viernes", activities: [{ time: "Todo el d√≠a", content: "Configura tus actividades" }], workout: null, diet: { breakfast: "...", lunch: "...", dinner: "...", note: "..." }},
            6: { name: "S√°bado", activities: [{ time: "Todo el d√≠a", content: "Configura tus actividades" }], workout: null, diet: { breakfast: "...", lunch: "...", dinner: "...", note: "..." }},
            0: { name: "Domingo", activities: [{ time: "Todo el d√≠a", content: "Configura tus actividades" }], workout: null, diet: { breakfast: "...", lunch: "...", dinner: "...", note: "..." }}
        };

        let planningData = defaultData;

        // Cargar datos guardados
        function loadSavedData() {
            const saved = localStorage.getItem('planningData');
            if (saved) {
                try {
                    planningData = JSON.parse(saved);
                } catch (e) {
                    console.error('Error al cargar datos:', e);
                }
            }
        }

        function openConfig() {
            document.getElementById('configModal').classList.add('active');
            document.getElementById('configData').value = JSON.stringify(planningData, null, 2);
        }

        function closeConfig() {
            document.getElementById('configModal').classList.remove('active');
        }

        function saveConfig() {
            try {
                const newData = JSON.parse(document.getElementById('configData').value);
                planningData = newData;
                localStorage.setItem('planningData', JSON.stringify(newData));
                closeConfig();
                updateUI(new Date().getDay());
                alert('‚úÖ Configuraci√≥n guardada correctamente');
            } catch (e) {
                alert('‚ùå Error: El formato JSON no es v√°lido\n\n' + e.message);
            }
        }

        function getDayName(dayNum) {
            const days = ['Domingo', 'Lunes', 'Martes', 'Mi√©rcoles', 'Jueves', 'Viernes', 'S√°bado'];
            return days[dayNum];
        }

        function renderDay(dayNum) {
            const data = planningData[dayNum];
            const content = document.getElementById('content');
            
            let html = '';

            // Secci√≥n de Actividades
            html += `
                <div class="section">
                    <div class="section-title">
                        <span class="icon">üìÖ</span>
                        Actividades
                    </div>
            `;
            
            data.activities.forEach(activity => {
                html += `
                    <div class="activity-item">
                        <div class="time">${activity.time}</div>
                        <div class="content">${activity.content}</div>
                    </div>
                `;
            });
            
            html += '</div>';

            // Secci√≥n de Ejercicio
            html += `
                <div class="section">
                    <div class="section-title">
                        <span class="icon">üí™</span>
                        Ejercicio
                    </div>
            `;

            if (data.workout) {
                html += `
                    <div class="exercise-item">
                        <div class="time">${data.workout.time}</div>
                        <div class="content">${data.workout.name}</div>
                        <div class="exercise-details">
                            <strong>Calentamiento:</strong> ${data.workout.warmup}
                            <strong>Ejercicios:</strong>
                `;
                
                data.workout.exercises.forEach((ex, i) => {
                    html += `<br>${i + 1}. ${ex.name} - ${ex.reps}<br><em>${ex.notes}</em>`;
                });
                
                html += `
                            <strong>Estructura:</strong> ${data.workout.rounds}
                            <strong>Vuelta de calma:</strong> ${data.workout.cooldown}
                        </div>
                    </div>
                `;
            } else {
                html += `
                    <div class="no-workout">
                        üåô D√≠a de descanso
                    </div>
                `;
            }

            html += '</div>';

            // Secci√≥n de Dieta
            html += `
                <div class="section">
                    <div class="section-title">
                        <span class="icon">üçΩÔ∏è</span>
                        Alimentaci√≥n
                    </div>
                    <div class="meal-item">
                        <div class="time">Desayuno</div>
                        <div class="content">${data.diet.breakfast}</div>
                    </div>
                    <div class="meal-item">
                        <div class="time">Comida</div>
                        <div class="content">${data.diet.lunch}</div>
                    </div>
                    <div class="meal-item">
                        <div class="time">Cena</div>
                        <div class="content">${data.diet.dinner}</div>
                    </div>
                    <div class="diet-note">
                        üí° ${data.diet.note}
                    </div>
                </div>
            `;

            content.innerHTML = html;
        }

        function updateUI(dayNum) {
            document.getElementById('currentDay').textContent = getDayName(dayNum);

            document.querySelectorAll('.day-btn').forEach(btn => {
                btn.classList.remove('active');
                if (parseInt(btn.dataset.day) === dayNum) {
                    btn.classList.add('active');
                }
            });

            renderDay(dayNum);
        }

        // Event listeners
        document.querySelectorAll('.day-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const dayNum = parseInt(btn.dataset.day);
                updateUI(dayNum);
            });
        });

        // Cerrar modal con ESC
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') closeConfig();
        });

        // Initialize
        loadSavedData();
        const today = new Date().getDay();
        updateUI(today);
    </script>
</body>
</html>
